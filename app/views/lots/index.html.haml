.container

  %ul.breadcrumb
    %li
      %a(href="/home") Home
      %span.divider /
    %li
      %a(href="/home/auctions") Auctions
      %span.divider /
    %li
      %a{:href => home_auction_path(@auction)}= truncate @auction.name
      %span.divider /
    %li.active
      Lots

  %h4
    Auction: #{@auction.name}
  %h1
    Lots
  %p
    - if path_exists?(:new_resource_path)
      %a.btn.btn-yellow{:href => new_resource_path} Add New #{resource_name.humanize}

  - if resources.respond_to? 'num_pages'
    = paginate resources

  %table.table.table-striped.table-bordered.table-condensed.max-width
    = render :partial => 'header'
    = render :partial => 'row'

  - if resources.respond_to? 'num_pages'
    = paginate resources


