.row
  .span10.offset1
    %ul.breadcrumb
      %li
        %a(href="/home") Home
        %span.divider /
      %li
        %a(href="/home/auctions") Auctions
        %span.divider /
      %li
        %a{:href => home_auction_path(@auction)}= truncate @auction.name
        %span.divider /
      %li
        %a{:href => resources_path} Lots
        %span.divider /
      %li.active
        %a{:href => resource_path} #{resource.number}: #{truncate resource.name}

    %a.btn.btn-yellow{:href => resource_items_path} Items
    %a.btn{:href => edit_resource_path} Edit

    %h4
      Lot:
    %h1
      = resource.name.titleize

    %table.table.table-striped.table-bordered
      - for column in  [ :name, :number, :buy_now_price, :min_increment, :collected, :sale_start_at, :sale_end_at , :state]
        %tr
          %th= column.to_s.humanize
          %td
            - if column.to_s.match(/_at$/)
              = resource.send(column).try(:to_s, :long)
            - else
              = resource.send(column)





