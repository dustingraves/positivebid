.row
  .span10.offset1
    %h1
      = resource_name.titleize
      - if enclosing_resource && path_exists?(:enclosing_resource_path)
        for #{link_to enclosing_resource_name, enclosing_resource_path}

    %table.table.table-striped.table-bordered
      - for column in  [ :name, :number, :buy_now_price, :min_increment, :collected, :sale_start_at, :sale_end_at , :state]
        %tr
          %th= column.to_s.humanize
          %td
            - if column.to_s.match(/_at$/)
              = resource.send(column).try(:to_s, :long)
            - else
              = resource.send(column)




    - if path_exists?(:resource_items_path)
      %p
        %a{:href => resource_items_path} View Lot Items

    = link_to 'Edit this ' + resource_name, edit_resource_path
    |
    \#{link_to 'Back to Index', resources_path}
