
= f.input :name, label: 'Item Name', input_html: { class: 'span6' }, help_link: true
= f.input :description, input_html: { rows: 5 , class: 'span6' }, help_link: true
= f.input :terms, input_html: { rows: 4 , class: 'span6' }, help_link: true
= f.input :collection_info, input_html: { rows: 4, class: 'span6'  }, help_link: true
= f.input :donor_name, input_html: { class: 'span6' }, help_link: true
= f.input :donor_byline, input_html: { rows: 2, class: 'span6'  }, help_link: true
= f.input :organiser_notes, input_html: { rows: 4, class: 'span6'  }, help_link: true

.control-group
  .controls
    - if resource.picture.try(:id)
      %img.m#item_photo{:src => m_picture_path(resource.picture, :format => :jpg)}
    - else
      %img.s#item_photo


- f.object.picture or f.object.build_picture
= f.simple_fields_for :picture do |p|
  = p.input :image_file, as: :file, label: 'Photo File', help_link: true
  = p.input :image_file_url, as: :url, label: 'Photo URL', hint: "You can either choose a file to upload as your photo, or supply the URL to a photo and we'll grab it for you.", input_html: { class: 'span6' }, help_link: true

