#lots_index
  %div(data-role="page")
    %div.ui-bar-b(data-role="header" data-theme="b")
      %a(sam="#/" data-icon="home" data-direction="reverse") Home
      %h1 Catalog
      %a.status(data-icon="alert" data-rv-jq_a_btn_icon="status:icon < status.connected" data-rv-jq_a_btn_text="status:text < status.status" data-rv-text="status:text") Initial

    %div(data-role="content")
      %h2(data-rv-text="auction.name")

      %div(data-rv-hide="lots:length < lots.models")
        %p Hmmm, no lots found.

      %ul(data-role="listview" data-inset="false" data-rv-show="lots:length < lots.models" data-rv-listview_refresh="lots:length < lots.models")
        %li(data-rv-each-lot="lots:models < lots.models")
          %a(data-rv-sam="lot:descriptionUrl" data-rv-css_highlight="lot.current_bid_id")
            %img.p80(data-rv-src="lot:imageUrl") 
            %p.ui-li-aside.p_aside_width
              Â£
              %strong(data-rv-text="lot:current_bid_amount < lot.current_bid_id")>
            %h3
              %span(data-rv-text="lot.number")>
              \:
              %span(data-rv-text="lot.name")
            %p
              %span(data-rv-class-blink="lot:is_closing < lot.state" data-rv-html="lot:summary < lot.state")
            %p
              %span(data-rv-text="lot:bidder_summary < lot.state lot.current_bid_id")
          %a(data-rv-class-blink="lot:is_closing < lot.state" data-rv-sam="lot:biddingUrl" data-icon="arrow-r" data-rv-jq_a_btn_icon="lot:icon < lot.state" data-theme="e" data-iconpos="notext" title="Bid Now") Bid

    %div(data-role="content")

    %div.ui-bar-b(data-role="footer")
      %h4 PositiveBid

