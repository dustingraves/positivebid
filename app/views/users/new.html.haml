.row
  .span10.offset1

    %h1 Sign Up
    %br/
    = simple_form_for @user, :path => users_path, :html => { :class => 'form-horizontal'} do |f|
      = f.error_notification
      = f.error_messages
      = render :partial => "new_form", :object => f
      .control-group
        %label.control-label(for="answer") Math question: #{@question.html_safe}
        .controls
          %input#answer(name="answer" type="text")
          %p.inline-hints Answer the math question

      .form-actions
        = f.submit "Create my account", :class => 'btn btn-primary' , 'data-disable-with' => 'please wait...'
